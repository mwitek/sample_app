<% if @user.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			<p>This form contains <%=pluralize(@user.errors.count, 'error') %></p>
		</div><!-- END .alert -->
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div><!-- END #error_explanation -->
<% end %>